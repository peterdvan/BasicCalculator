<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.basiccalculator.BasicCalculator">

    <Button
        android:text="@string/one"
        android:layout_height="50sp"
        android:id="@+id/one"
        android:layout_width="50sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/numberHolder"
        android:layout_alignStart="@+id/numberHolder"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="@string/two"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/two"
        android:layout_alignBaseline="@+id/one"
        android:layout_alignBottom="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="@string/three"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/three"
        android:layout_alignBaseline="@+id/two"
        android:layout_alignBottom="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="@string/four"
        android:layout_width="50sp"
        android:id="@+id/four"
        android:layout_height="50sp"
        android:layout_below="@+id/two"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="@string/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three"
        android:layout_alignLeft="@+id/two"
        android:layout_alignStart="@+id/two"
        android:id="@+id/five"
        android:layout_toLeftOf="@+id/three"
        android:layout_toStartOf="@+id/three"
        android:layout_alignBottom="@+id/four"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="@string/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three"
        android:id="@+id/six"
        android:layout_alignRight="@+id/three"
        android:layout_alignEnd="@+id/three"
        android:layout_alignBottom="@+id/five"
        android:layout_below="@+id/three"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="@string/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seven"
        android:layout_alignLeft="@+id/five"
        android:layout_alignStart="@+id/five"
        android:id="@+id/eight"
        android:layout_alignRight="@+id/five"
        android:layout_alignEnd="@+id/five"
        android:layout_alignBottom="@+id/seven"
        android:theme="@style/numberColors"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/eight"
        android:layout_alignLeft="@+id/six"
        android:layout_alignStart="@+id/six"
        android:id="@+id/nine"
        android:layout_alignRight="@+id/six"
        android:layout_alignEnd="@+id/six"
        android:layout_alignBottom="@+id/eight"
        android:text="@string/nine"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/one"
        android:layout_alignLeft="@+id/addition"
        android:layout_alignStart="@+id/addition"
        android:id="@+id/Division" />

    <Button
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/three"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one"
        android:id="@+id/clear"
        android:layout_toLeftOf="@+id/three"
        android:layout_toStartOf="@+id/three" />

    <Button
        android:text="@string/seven"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:id="@+id/seven"
        android:layout_below="@+id/four"
        android:layout_alignRight="@+id/four"
        android:layout_alignEnd="@+id/four"
        android:layout_alignLeft="@+id/four"
        android:layout_alignStart="@+id/four"
        android:theme="@style/numberColors"
        />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addition"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_above="@+id/subtraction"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtraction"
        android:layout_alignBottom="@+id/nine"
        android:layout_alignLeft="@+id/addition"
        android:layout_alignStart="@+id/addition" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplication"
        android:layout_above="@+id/addition"
        android:layout_alignLeft="@+id/addition"
        android:layout_alignStart="@+id/addition" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="0"
        android:id="@+id/numberHolder"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="49dp"
        android:gravity="bottom|right" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equal"
        android:layout_above="@+id/three"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three"
        android:layout_alignRight="@+id/three"
        android:layout_alignEnd="@+id/three"
        android:layout_alignTop="@+id/clear" />

    <Button
        android:text="@string/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/zero"
        android:layout_below="@+id/eight"
        android:layout_alignLeft="@+id/seven"
        android:layout_alignStart="@+id/seven"
        android:layout_alignRight="@+id/nine"
        android:layout_alignEnd="@+id/nine"
        android:theme="@style/numberColors"
        />

</RelativeLayout>
